<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
<body>
    <div class="container">
        <h1>Your Wishes</h1>
        <h3>Welcome <%= user %></h3>
        <a href="/user/logout"><button>Logout</button></a>
        <a href="/wish/new"><button>Make A New Wish</button></a>
        <% wishes.forEach((wish, index) => { %>
            <div class="index card">
                <a href="/wish/<%=wish._id%>"><h4><%=wish.name%> - <%=wish.price%></h4></a>
            </div>
        <% }) %>
    </div>
</body>
</html>